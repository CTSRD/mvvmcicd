<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_earth_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/map_earth"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/iv_earth_numbers"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/shape_help_circle"
        android:gravity="center"
        android:text="!!"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_earth_icon"
        app:layout_constraintEnd_toEndOf="@+id/iv_earth_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_earth_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_earth_icon" />
    <TextView
        android:id="@+id/tv_earth_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:text="subtitle"
        android:textColor="@color/title"
        android:background="@color/white"
        android:visibility="gone"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/iv_earth_icon"
        app:layout_constraintEnd_toEndOf="@+id/iv_earth_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_earth_icon"
        app:layout_constraintBottom_toTopOf="@+id/tv_earth_body"/>
    <TextView
        android:id="@+id/tv_earth_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:text="body"
        android:textColor="@color/subtitle"
        android:background="@color/white"
        android:visibility="gone"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/tv_earth_subtitle"
        app:layout_constraintEnd_toEndOf="@+id/iv_earth_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_earth_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>