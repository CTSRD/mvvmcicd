<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_size_56"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/btnActionbarBack"
                    android:layout_width="@dimen/layout_height_48"
                    android:layout_height="@dimen/layout_height_48"
                    android:layout_margin="@dimen/margin_4"
                    android:paddingTop="@dimen/padding_11"
                    android:paddingBottom="@dimen/padding_11"
                    android:paddingStart="@dimen/padding_12"
                    android:paddingEnd="@dimen/padding_12"
                    android:layout_gravity="start"
                    android:contentDescription="back"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/primary" />

                <TextView
                    android:id="@+id/tvActionTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:text=""
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintStart_toEndOf="@+id/btnActionbarBack"
                    app:layout_constraintEnd_toStartOf="@+id/btn_sort_action"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <ImageView
                    android:id="@+id/btn_sort_action"
                    android:layout_width="@dimen/layout_height_48"
                    android:layout_height="@dimen/layout_height_48"
                    android:layout_margin="@dimen/margin_4"
                    android:paddingTop="@dimen/padding_11"
                    android:paddingBottom="@dimen/padding_11"
                    android:paddingStart="@dimen/padding_12"
                    android:paddingEnd="@dimen/padding_12"
                    android:contentDescription="back"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_sort_24"
                    app:tint="@color/primary"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintStart_toEndOf="@+id/tvActionTitle"
                    app:layout_constraintEnd_toStartOf="@+id/btnActionbarAction"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <ImageView
                    android:id="@+id/btnActionbarAction"
                    android:layout_width="@dimen/layout_height_48"
                    android:layout_height="@dimen/layout_height_48"
                    android:layout_margin="@dimen/margin_4"
                    android:paddingTop="@dimen/padding_11"
                    android:paddingBottom="@dimen/padding_11"
                    android:paddingStart="@dimen/padding_12"
                    android:paddingEnd="@dimen/padding_12"
                    android:contentDescription="back"
                    android:visibility="gone"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/ic_baseline_add_24"
                    app:tint="@color/primary"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>