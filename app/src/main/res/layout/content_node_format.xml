<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_4"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/iv_node_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/map_mwr3102ax54"
        android:background="@color/transparent"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iv_node_numbers"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/shape_number_circle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_node_icon"
        app:layout_constraintEnd_toEndOf="@+id/iv_node_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_node_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_node_icon" />
    <TextView
        android:id="@+id/tv_node_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:text="subtitle"
        android:textColor="@color/title"
        android:background="@color/transparent"
        android:visibility="gone"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/iv_node_icon"
        app:layout_constraintEnd_toEndOf="@+id/iv_node_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_node_icon"
        app:layout_constraintBottom_toTopOf="@+id/tv_node_body"/>
    <TextView
        android:id="@+id/tv_node_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:text="body"
        android:textColor="@color/subtitle"
        android:background="@color/transparent"
        android:visibility="gone"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/tv_node_subtitle"
        app:layout_constraintEnd_toEndOf="@+id/iv_node_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_node_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>